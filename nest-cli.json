{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "infra/main",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "keycloak-nest-core": {
      "type": "library",
      "root": "libs/keycloak-nest-core",
      "entryFile": "index",
      "sourceRoot": "libs/keycloak-nest-core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/keycloak-nest-core/tsconfig.lib.json"
      }
    }
  }
}